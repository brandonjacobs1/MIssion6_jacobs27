
@{
    ViewData["Title"] = "Movies";
}
@using MIssion6_jacobs27.Models
@model List<Movie>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Rating</td>
            <td>Year</td>
            <td>Director</td>
            <td>Edited</td>
            <td>Lent to</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach(var movie in Model)
            {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Category.CategoryName</td>
            <td>@movie.Rating</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Edited</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
            <td><a asp-controller="Home" asp-action="edit" asp-route-id="@movie.MovieID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="delete" asp-route-id="@movie.MovieID">Delete</a></td>
        </tr>
            }
    </tbody>
</table>
